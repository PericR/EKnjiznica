@model EKnjiznica.Dtos.BookViewModel

@{
    ViewData["Title"] = "Home page";
}

<div class="row">
  <div class="col-xs-12">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">Books</h3>
        
        <form asp-action="ManageBooks" class="form-horizontal" method="GET">
            <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
              <select asp-for="SearchCategory">
                <option value="">All</option>
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Description">@item.Description</option>
                }
              </select>              
            </div>
          <div class="input-group-btn">
                <button asp-action="Index" type="submit" class="btn btn-default">Filter<i class="fa fa-search"></i></button>
              </div>
        </form>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
          </tr>
          @foreach (var item in Model.Books)
          {                
              <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Author)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>               
                <td>
                    <form asp-action="AddToBasket">
                        <button asp-route-id="@item.Id" asp-action="AddToBasket" asp-controller="Profile" type="submit" class="btn btn-warning">Add to Basket</button>
                    </form>
                </td> 
              </tr>                
          }
        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>