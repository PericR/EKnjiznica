@model EKnjiznica.Dtos.PasswordResetViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
<div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Horizontal Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form asp-action="ChangePassword" class="form-horizontal">
              <div class="box-body">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                  <label asp-for="Password" class="col-sm-2 control-label">Password</label>
                  <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>                  
                </div>

                <div class="form-group">
                  <label asp-for="NewPassword" class="col-sm-2 control-label">New Password</label>
                  <div class="col-sm-10">
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                  </div>                  
                </div>

                <div class="form-group">
                  <label asp-for="ConfirmedPassword" class="col-sm-2 control-label">Confirm Password</label>
                  <div class="col-sm-10">
                    <input asp-for="ConfirmedPassword" type="password" class="form-control" placeholder="Confirm">
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                  </div>                  
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button asp-action="Profile" class="btn btn-warning">Cancel</button>
                <button asp-action="ChangePassword" type="submit" class="btn btn-success pull-right">Save Change</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          </div>